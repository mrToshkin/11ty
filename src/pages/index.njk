{% set buttonImgTitle = 'Открыть информацию о релизе' %}

<main class="releases container">
  <section class="releases__collection">
    {% for cover in collections.covers | reverse %}
      <button 
        class="releases__button button-reset"
        data-path="{{ cover.path }}"
        data-root="{{ cover.root }}"
        aria-label="{{ buttonImgTitle }}" 
        title="{{ buttonImgTitle }}"
      >
        <span class="releases__button-title">
          {{ collections.release[loop.index0].data.title }}
        </span>
        <img src="{{ cover.path }}" class="releases__cover" width="160px" height="160px" alt="cover">
      </button>
    {% endfor %}
  </section>
  <aside class="preview__container container">
    <div class="preview">
      <img class="preview__cover" style="max-width: 425px" width="100%" alt="cover">
      <iframe class="preview__description" frameborder="no" >
    </div>
  </aside>
</main>
