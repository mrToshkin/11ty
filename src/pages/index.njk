{% set buttonImgTitle = 'Открыть информацию о релизе' %}

<main>
  <div class="releases container">
    <section class="releases__collection">
      {% for cover in collections.covers | reverse %}
        <button 
          class="releases__button button-reset"
          data-root="{{ cover.root }}"
          aria-label="{{ buttonImgTitle }}" 
          title="{{ buttonImgTitle }}"
        >
          <img src="{{ cover.path }}" class="releases__cover" width="160px" height="160px" alt="cover">
        </button>
      {% endfor %}
    </section>
    <iframe class="releases__preview" frameborder="no" >
  </div>
</main>
{% include "footer/footer.njk" %}
{% include "soundcloud/soundcloud.njk" %}
